{{>header}}

<div class="container mb-4">
  <div class="row">
    <div class="col-md-12 jumbotron mt-4">
      <h1>{{titulo}}</h1>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <form action="/crearcurso" class="form-group" method="POST">
            <div class="form-group">
              <label for="nombre">Nombre del Curso</label>
              <input type="text" name="nombre" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="descripcion">Descripci√≥n del Curso</label>
              <textarea name="descripcion" cols="30" class="form-control" required></textarea>
            </div>
            <div class="form-group">
              <label for="valor">Valor del Curso</label>
              <input type="number" name="valor" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="modalidad">Modalidad del Curso</label>
              <select name="modalidad" class="form-control">
                <option value="Virtual">Virtual</option>
                <option value="Presencial">Presencial</option>
              </select>
            </div>
            <div class="form-group">
              <label for="intensidad">Intensidad del Curso</label>
              <input type="number" name="intensidad" class="form-control">
            </div>
            <div class="form-group">
              <label for="estado">Estado del Curso</label>
              <select name="estado" class="form-control">
                <option value="disponible">Disponible</option>
                <option value="cerrado">Cerrado</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Crear Curso</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>

{{>footer}}