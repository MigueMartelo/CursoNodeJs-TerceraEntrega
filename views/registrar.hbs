{{>header}}

<div class="container mb-4">
  <div class="row">
    <div class="col-md-12 jumbotron mt-4">
      <h1>{{titulo}}</h1>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-8">
      {{mensaje}}
      <div class="card">
        <div class="card-body">
          <form action="/registrar" class="form-group" method="post">
            <div class="form-group">
              <label for="doc_identidad">Documento de Indentidad</label>
              <input type="text" name="doc_identidad" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="password">Contraseña</label>
              <input type="password" name="password" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="nombre">Nombre Completo</label>
              <input type="text" name="nombre" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="email">Correo Electrónico</label>
              <input type="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="telefono">Número de Teléfono</label>
              <input type="tel" name="telefono" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="rol">Curso a inscribirse</label>
              <select name="rol" class="form-control" required>
                <option value="aspirante">Aspirante</option>
                <option value="coordinador">Coordinador</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Inscribir</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>

{{>footer}}